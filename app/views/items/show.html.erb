<% content_for :title do %>
  <%= @item.title %> -monolist
<% end %>
<% content_for :description do %>
  <%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #商品イメージ %>
          <% if @item.large_image.present? %>
            <%= image_tag(@item.large_image, alt: @item.title) %>
           <% else %>
            <%= image_tag('no-image.png', alt: 'no-image') %>
         <% end %>
        </div>
      </div>
      <div class="title">
        <% #商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @have_users.each do |user| %>
            <%= link_to(gravatar_for(user, size: 20), user) %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @want_users.each do |user| %>
            <%= link_to(gravatar_for(user, size: 20), user) %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
